# Port the backend server will run on
PORT=8000

# JWT access token secret and expiry
ACCESS_TOKEN_SECRET=your_access_token_secret_here
ACCESS_TOKEN_EXPIRY=10h

# JWT refresh token secret and expiry
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRY=5d

# CORS origin (frontend URL)
# In dev: http://localhost:5173
# In prod: https://your-frontend-domain.com
CORS_ORIGIN=http://localhost:5173

# MongoDB connection string
MONGODB_URL=your_mongodb_connection_string_here

# Environment mode (development or production)
NODE_ENV=development

# Cloudinary configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here
